# Este archivo fue creado con "oasproj init" y serÃ¡ sobre-escrito con "oasproj update"
set -eu
# oas build context
OAS_CURRENT_TAG=$(git tag | tail -n1)
OAS_CURRENT_TAG=${OAS_CURRENT_TAG:-0.SNAPSHOT}
OAS_VERSION_MAJOR_MINOR="${DRONE_TAG:-$OAS_CURRENT_TAG}"
OAS_VERSION_RELEASE="${DRONE_BUILD_NUMBER:-$(date +%s)}"
OAS_VERSION="${OAS_VERSION_MAJOR_MINOR}.${OAS_VERSION_RELEASE}"
OAS_PACKAGE_NAME="oasproj"

export OAS_VERSION
export OAS_PACKAGE_NAME

source scripts/build

# build the package
rm -rf target
mkdir -p target
if ! which fpm > /dev/null 2>&1
then
  echo fpm no encontrado, tratando de instalar
	gem install fpm
fi
fpm --package=target -C root -s dir -t rpm --name="${OAS_PACKAGE_NAME}" --version="${OAS_VERSION}" --before-install scripts/before-install --after-install scripts/after-install --before-remove scripts/before-remove --after-remove scripts/after-remove --before-upgrade scripts/before-upgrade --after-upgrade scripts/after-upgrade --rpm-os linux .
